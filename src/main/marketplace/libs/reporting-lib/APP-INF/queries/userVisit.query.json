{
    "query": {
        "bool": {
            "must": [
                {
                    "range": {
                        "reqDate": {
                            "gte": "$startDate",
                            "lte": "$endDate"
                        }
                    }
                },
                {
                    "term": {
                        "resultCode": 200
                    }
                },
                {
                    "prefix": {
                        "contentType": "text/html"
                    }
                },
                {
                    "exists" : { "field" : "website" }
                }
            ]
        }
    },
    "aggs": {
        "byWebsite": {
            "terms": {
                "field": "website"
            },
            "aggs": {
                "userVisits": {
                    "date_histogram" : {
                        "field" : "reqDate",
                        "interval" : "day",
                        "extended_bounds" : {
                            "min" : "$startDate",
                            "max" : "$endDate"
                        }
                    },
                    "aggs": {
                        "usersCount" : {
                            "cardinality" : {
                                "field" : "reqUser"
                            }
                        }
                    }
                }
            }
        }
    },
    "size": 0
}